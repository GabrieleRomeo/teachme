#!/usr/bin/bash

bold=`tput bold`
underline=`tput smul`
stop_underline=`tput rmul`
reset=`tput sgr0`

echo "This is the ${bold}tar${reset} command."

# The command's name
echo -e 'tar'

# the command's description
echo "description here"

echo "------------"

# the command's syntax
echo "Syntax:"
echo "tar [OPTION...] [FILE]..."
echo -e "\t-A, --catenate, --concatenate"
echo -e "\tappend tar files to an archive"
echo -e "\t-c, --create"
echo -e "\tcreate a new archive"
echo -e "\t-d, --diff, --compare"
echo -e "\tfind differences between archive and file system"
echo -e "\t--delete"
echo -e "\tdelete from the archive (not on mag tapes!)"
echo -e "\t-r, --append"
echo -e "\tappend files to the end of an archive"
echo -e "\t-t, --list"
echo -e "\tlist the contents of an archive"
echo -e "\t--test-label"
echo -e "\ttest the archive volume label and exit"
echo -e "\t-u, --update"
echo -e "\tonly append files newer than copy in archive"
echo -e "\t-x, --extract, --get"
echo -e "\textract files from an archive"
echo -e "\t-C, --directory=DIR"
echo -e "\tchange to directory DIR"
echo -e "\t-f, --file=ARCHIVE"
echo -e "\tuse archive file or device ARCHIVE"
echo -e "\t-j, --bzip2"
echo -e "\tfilter the archive through bzip2"
echo -e "\t-J, --xz"
echo -e "\tfilter the archive through xz"
echo -e "\t-p, --preserve-permissions"
echo -e "\textract information about file permissions (default for superuser)"
echo -e "\t-v, --verbose"
echo -e "\tverbosely list files processed"
echo -e "\t-z, --gzip"
echo -e "\tfilter the archive through gzip"
echo -e "\t"
echo -e "\tOperation modifiers:"
echo -e "\t"
echo -e "\t--check-device"
echo -e "\tcheck device numbers when creating incremental archives (default)"
echo -e "\t-g, --listed-incremental=FILE"
echo -e "\thandle new GNU-format incremental backup"
echo -e "\t-G, --incremental"
echo -e "\thandle old GNU-format incremental backup"
echo -e "\t--ignore-failed-read"
echo -e "\tdo not exit with nonzero on unreadable files"
echo -e "\t--level=NUMBER"
echo -e "\tdump level for created listed-incremental archive"
echo -e "\t-n, --seek"
echo -e "\tarchive is seekable"
echo -e "\t--no-check-device"
echo -e "\tdo not check device numbers when creating incremental archives"
echo -e "\t--no-seek"
echo -e "\tarchive is not seekable"
echo -e "\t--occurrence[=NUMBER]"
echo -e "\tprocess only the NUMBERth occurrence of each file in the archive; this option is valid only in conjunction with one of the subcommands --delete, --diff, --extract or --list and when a list of files is given either on the command line or via the -T option; NUMBER defaults to 1"
echo -e "\t--sparse-version=MAJOR[.MINOR]"
echo -e "\tset version of the sparse format to use (implies --sparse)"
echo -e "\t-S, --sparse"
echo -e "\thandle sparse files efficiently"
echo -e "\t"
echo -e "\tOverwrite control:"
echo -e "\t"
echo -e "\t-k, --keep-old-files"
echo -e "\tdon't replace existing files when extracting, treat them as errors"
echo -e "\t--skip-old-files"
echo -e "\tdon't replace existing files when extracting, silently skip over them"
echo -e "\t--keep-newer-files"
echo -e "\tdon't replace existing files that are newer than their archive copies"
echo -e "\t--no-overwrite-dir"
echo -e "\tpreserve metadata of existing directories"
echo -e "\t--overwrite"
echo -e "\toverwrite existing files when extracting"
echo -e "\t--overwrite-dir"
echo -e "\toverwrite metadata of existing directories when extracting (default)"
echo -e "\t--recursive-unlink"
echo -e "\tempty hierarchies prior to extracting directory"
echo -e "\t--remove-files"
echo -e "\tremove files after adding them to the archive"
echo -e "\t-U, --unlink-first"
echo -e "\tremove each file prior to extracting over it"
echo -e "\t-W, --verify"
echo -e "\tattempt to verify the archive after writing it"
echo -e "\t"
echo -e "\tSelect output stream:"
echo -e "\t"
echo -e "\t--ignore-command-error "
echo -e "\tignore exit codes of children"
echo -e "\t--no-ignore-command-error"
echo -e "\ttreat non-zero exit codes of children as error"
echo -e "\t-O, --to-stdout"
echo -e "\textract files to standard output"
echo -e "\t--to-command=COMMAND"
echo -e "\tpipe extracted files to another program"
echo -e "\tHandling of file attributes:"
echo -e "\t--acls"
echo -e "\tSave the ACLs to the archive"
echo -e "\t--atime-preserve[=METHOD]"
echo -e "\tpreserve access times on dumped files, either by restoring the times after reading (METHOD='replace'; default) or by not setting the times in the first place (METHOD='system')"
echo -e "\t--delay-directory-restore"
echo -e "\tdelay setting modification times and permissions of extracted directories until the end of extraction"
echo -e "\t--group=NAME"
echo -e "\tforce NAME as group for added files"
echo -e "\t--mode=CHANGES"
echo -e "\tforce (symbolic) mode CHANGES for added files"
echo -e "\t--mtime=DATE-OR-FILE"
echo -e "\tset mtime for added files from DATE-OR-FILE"
echo -e "\t-m, --touch"
echo -e "\tdon't extract file modified time"
echo -e "\t--no-acls"
echo -e "\tDon't extract the ACLs from the archive"
echo -e "\t--no-delay-directory-restore"
echo -e "\tcancel the effect of --delay-directory-restore option"
echo -e "\t--no-same-owner"
echo -e "\textract files as yourself (default for ordinary users)"
echo -e "\t--no-same-permissions"
echo -e "\tapply the user's umask when extracting permissions from the archive (default for ordinary users)"
echo -e "\t--no-selinux"
echo -e "\tDon't extract the SELinux context from the archive"
echo -e "\t--no-xattrs"
echo -e "\tDon't extract the user/root xattrs from the archive"
echo -e "\t--numeric-owner"
echo -e "\talways use numbers for user/group names"
echo -e "\t--owner=NAME"
echo -e "\tforce NAME as owner for added files"
echo -e "\t-p, --preserve-permissions, --same-permissions"
echo -e "\textract information about file permissions (default for superuser)"
echo -e "\t--preserve"
echo -e "\tsame as both -p and -s"
echo -e "\t--same-owner"
echo -e "\ttry extracting files with the same ownership as exists in the archive (default for superuser)"
echo -e "\t-s, --preserve-order, --same-order"
echo -e "\tsort names to extract to match archive"
echo -e "\t--selinux"
echo -e "\tSave the SELinux context to the archive"
echo -e "\t--xattrs"
echo -e "\tSave the user/root xattrs to the archive"
echo -e "\t"
echo -e "\tDevice selection and switching:"
echo -e "\t"
echo -e "\t-f, --file=ARCHIVE"
echo -e "\tuse archive file or device ARCHIVE"
echo -e "\t--force-local"
echo -e "\tarchive file is local even if it has a colon"
echo -e "\t-F, --info-script=NAME, --new-volume-script=NAME"
echo -e "\trun script at end of each tape (implies -M)"
echo -e "\t-L, --tape-length=NUMBER"
echo -e "\tchange tape after writing NUMBER x 1024 bytes"
echo -e "\t-M, --multi-volume"
echo -e "\tcreate/list/extract multi-volume archive"
echo -e "\t--rmt-command=COMMAND"
echo -e "\tuse given rmt COMMAND instead of rmt"
echo -e "\t--rsh-command=COMMAND"
echo -e "\tuse remote COMMAND instead of rsh"
echo -e "\t--volno-file=FILE"
echo -e "\tuse/update the volume number in FILE"
echo -e "\t"
echo -e "\tDevice blocking:"
echo -e "\t"
echo -e "\t-b, --blocking-factor=BLOCKS"
echo -e "\tBLOCKS x 512 bytes per record"
echo -e "\t-B, --read-full-records"
echo -e "\treblock as we read (for 4.2BSD pipes)"
echo -e "\t-i, --ignore-zeros"
echo -e "\tignore zeroed blocks in archive (means EOF)"
echo -e "\t--record-size=NUMBER"
echo -e "\tNUMBER of bytes per record, multiple of 512"
echo -e "\t"
echo -e "\tArchive format selection:"
echo -e "\t"
echo -e "\t-H, --format=FORMAT"
echo -e "\tcreate archive of the given format"
echo -e "\tFORMAT is one of the following:"
echo -e "\t"
echo -e "\tgnu"
echo -e "\t"
echo -e "\tGNU tar 1.13.x format"
echo -e "\t"
echo -e "\toldgnu"
echo -e "\t"
echo -e "\tGNU format as per tar <= 1.12"
echo -e "\t"
echo -e "\tpax"
echo -e "\t"
echo -e "\tPOSIX 1003.1-2001 (pax) format"
echo -e "\t"
echo -e "\tposix"
echo -e "\t"
echo -e "\tsame as pax"
echo -e "\t"
echo -e "\tustar"
echo -e "\t"
echo -e "\tPOSIX 1003.1-1988 (ustar) format"
echo -e "\t"
echo -e "\tv7"
echo -e "\t"
echo -e "\told V7 tar format"
echo -e "\t"
echo -e "\t--old-archive, --portability"
echo -e "\tsame as --format=v7"
echo -e "\t--pax-option=keyword[[:]=value][,keyword[[:]=value]]..."
echo -e "\tcontrol pax keywords"
echo -e "\t--posix"
echo -e "\tsame as --format=posix"
echo -e "\t-V, --label=TEXT"
echo -e "\tcreate archive with volume name TEXT; at list/extract time, use TEXT as a globbing pattern for volume name"
echo -e "\t"
echo -e "\tCompression options:"
echo -e "\t"
echo -e "\t-a, --auto-compress"
echo -e "\tuse archive suffix to determine the compression program"
echo -e "\t-I, --use-compress-program=PROG"
echo -e "\tfilter through PROG (must accept -d)"
echo -e "\t-j, --bzip2"
echo -e "\tfilter the archive through bzip2"
echo -e "\t-J, --xz"
echo -e "\tfilter the archive through xz"
echo -e "\t--lzip"
echo -e "\tfilter the archive through lzip"
echo -e "\t--lzma"
echo -e "\tfilter the archive through lzma"
echo -e "\t--lzop"
echo -e "\t--no-auto-compress"
echo -e "\tdo not use archive suffix to determine the compression program"
echo -e "\t-z, --gzip, --gunzip, --ungzip"
echo -e "\tfilter the archive through gzip"
echo -e "\t-Z, --compress, --uncompress"
echo -e "\tfilter the archive through compress"
echo -e "\t"
echo -e "\tLocal file selection:"
echo -e "\t"
echo -e "\t--add-file=FILE"
echo -e "\tadd given FILE to the archive (useful if its name starts with a dash)"
echo -e "\t--backup[=CONTROL]"
echo -e "\tbackup before removal, choose version CONTROL"
echo -e "\t-C, --directory=DIR"
echo -e "\tchange to directory DIR"
echo -e "\t--exclude=PATTERN"
echo -e "\texclude files, given as a PATTERN"
echo -e "\t--exclude-backups"
echo -e "\texclude backup and lock files"
echo -e "\t--exclude-caches"
echo -e "\texclude contents of directories containing CACHEDIR.TAG, except for the tag file itself"
echo -e "\t--exclude-caches-all"
echo -e "\texclude directories containing CACHEDIR.TAG"
echo -e "\t--exclude-caches-under exclude everything under directories containing"
echo -e "\tCACHEDIR.TAG"
echo -e "\t--exclude-tag=FILE"
echo -e "\texclude contents of directories containing FILE, except for FILE itself"
echo -e "\t--exclude-tag-all=FILE exclude directories containing FILE"
echo -e "\t--exclude-tag-under=FILE"
echo -e "\texclude everything under directories containing FILE"
echo -e "\t--exclude-vcs"
echo -e "\texclude version control system directories"
echo -e "\t-h, --dereference"
echo -e "\tfollow symlinks; archive and dump the files they point to"
echo -e "\t--hard-dereference"
echo -e "\tfollow hard links; archive and dump the files they refer to"
echo -e "\t-K, --starting-file=MEMBER-NAME"
echo -e "\tbegin at member MEMBER-NAME in the archive"
echo -e "\t--newer-mtime=DATE"
echo -e "\tcompare date and time when data changed only"
echo -e "\t--no-null"
echo -e "\tdisable the effect of the previous --null option"
echo -e "\t--no-recursion"
echo -e "\tavoid descending automatically in directories"
echo -e "\t--no-unquote"
echo -e "\tdo not unquote filenames read with -T"
echo -e "\t--null -T reads null-terminated names, disable -C"
echo -e "\t-N, --newer=DATE-OR-FILE, --after-date=DATE-OR-FILE"
echo -e "\tonly store files newer than DATE-OR-FILE"
echo -e "\t--one-file-system"
echo -e "\tstay in local file system when creating archive"
echo -e "\t-P, --absolute-names"
echo -e "\tdon't strip leading '/'s from file names"
echo -e "\t--recursion"
echo -e "\trecurse into directories (default)"
echo -e "\t--suffix=STRING"
echo -e "\tbackup before removal, override usual suffix ('~' unless overridden by environment variable SIMPLE_BACKUP_SUFFIX)"
echo -e "\t-T, --files-from=FILE"
echo -e "\tget names to extract or create from FILE"
echo -e "\t--unquote"
echo -e "\tunquote filenames read with -T (default)"
echo -e "\t-X, --exclude-from=FILE"
echo -e "\texclude patterns listed in FILE"
echo -e "\t"
echo -e "\tFile name transformations:"
echo -e "\t"
echo -e "\t--strip-components=NUMBER"
echo -e "\tstrip NUMBER leading components from file names on extraction"
echo -e "\t--transform=EXPRESSION, --xform=EXPRESSION"
echo -e "\tuse sed replace EXPRESSION to transform file names"
echo -e "\tFile name matching options (affect both exclude and include patterns):"
echo -e "\t--anchored"
echo -e "\tpatterns match file name start"
echo -e "\t--ignore-case"
echo -e "\tignore case"
echo -e "\t--no-anchored"
echo -e "\tpatterns match after any '/' (default for exclusion)"
echo -e "\t--no-ignore-case"
echo -e "\tcase sensitive matching (default)"
echo -e "\t--no-wildcards"
echo -e "\tverbatim string matching"
echo -e "\t--no-wildcards-match-slash"
echo -e "\twildcards do not match '/'"
echo -e "\t--wildcards"
echo -e "\tuse wildcards (default)"
echo -e "\t--wildcards-match-slash"
echo -e "\twildcards match '/' (default for exclusion)"
echo -e "\t"
echo -e "\tInformative output:"
echo -e "\t"
echo -e "\t--checkpoint[=NUMBER]"
echo -e "\tdisplay progress messages every NUMBERth record (default 10)"
echo -e "\t--checkpoint-action=ACTION"
echo -e "\texecute ACTION on each checkpoint"
echo -e "\t--index-file=FILE"
echo -e "\tsend verbose output to FILE"
echo -e "\t-l, --check-links"
echo -e "\tprint a message if not all links are dumped"
echo -e "\t--no-quote-chars=STRING"
echo -e "\tdisable quoting for characters from STRING"
echo -e "\t--quote-chars=STRING"
echo -e "\tadditionally quote characters from STRING"
echo -e "\t--quoting-style=STYLE"
echo -e "\tset name quoting style; see below for valid STYLE values"
echo -e "\t-R, --block-number"
echo -e "\tshow block number within archive with each message"
echo -e "\t--show-defaults"
echo -e "\tshow tar defaults"
echo -e "\t--show-omitted-dirs"
echo -e "\twhen listing or extracting, list each directory that does not match search criteria"
echo -e "\t--show-transformed-names, --show-stored-names"
echo -e "\tshow file or archive names after transformation"
echo -e "\t--totals[=SIGNAL]"
echo -e "\tprint total bytes after processing the archive; with an argument - print total bytes when this SIGNAL is delivered; Allowed signals are: SIGHUP, SIGQUIT, SIGINT, SIGUSR1 and SIGUSR2; the names without SIG prefix are also accepted"
echo -e "\t--utc"
echo -e "\tprint file modification dates in UTC"
echo -e "\t-v, --verbose"
echo -e "\tverbosely list files processed"
echo -e "\t--warning=KEYWORD"
echo -e "\twarning control"
echo -e "\t-w, --interactive, --confirmation"
echo -e "\task for confirmation for every action"
echo -e "\tCompatibility options:"
echo -e "\t"
echo -e "\t-o"
echo -e "\twhen creating, same as --old-archive; when extracting, same as --no-same-owner"
echo -e "\t"
echo -e "\tOther options:"
echo -e "\t"
echo -e "\t-?, --help"
echo -e "\tgive this help list"
echo -e "\t--restrict"
echo -e "\tdisable use of some potentially harmful options"
echo -e "\t--usage"
echo -e "\tgive a short usage message"
echo -e "\t--version"
echo -e "\tprint program version"
echo -e "\tMandatory or optional arguments to long options are also mandatory or optional for any corresponding short options."
echo -e "\tThe backup suffix is '~', unless set with --suffix or SIMPLE_BACKUP_SUFFIX. The version control may be set with --backup or VERSION_CONTROL, values are:"
echo -e "\t"
echo -e "\tnone, off"
echo -e "\tnever make backups"
echo -e "\tt, numbered"
echo -e "\tmake numbered backups"
echo -e "\tnil, existing"
echo -e "\tnumbered if numbered backups exist, simple otherwise"
echo -e "\tnever, simple"
echo -e "\talways make simple backups"
echo -e "\tValid arguments for the --quoting-style option are:"
echo -e "\tliteral shell shell-always c c-maybe escape locale clocale"


echo "------------"

# the command's usage examples
# example 1
echo "test"
echo description here

# example 2
echo "test something"
