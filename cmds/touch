#!/usr/bin/bash

bold=$(tput bold)
underline=$(tput smul)
stop_underline=$(tput rmul)
reset=$(tput sgr0)

echo "This is the ${bold}touch${reset} command."

# The command's name
echo -e 'touch'

# the command's description
echo "The touch command is used to update the access and modification times of a specific FILE. If the file does not exists, it creates it."

echo "------------"

# the command's syntax
echo "Syntax:"
echo "${bold}touch [OPTION]... FILE...${reset}"			
echo -e "\t-${bold}-a:${reset} \t change only the access time"			
echo -e "\t-${bold}-c, --no-create:${reset} \t do not create any files"			
echo -e "\t-${bold}-m:${reset} \t change only the modification time"			
echo "------------"

# the command's usage examples
# example 1
echo "test"
echo description here

# example 2
echo "test something"
echo description here


exit 0
